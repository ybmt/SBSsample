<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root">

    <Button android:id="@+id/btn_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_user"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/add_user_text_size"
        android:background="@color/white"
        android:onClick="onAddUserClicked"/>


    <android.support.v7.widget.RecyclerView android:id="@+id/users_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_new_user">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
